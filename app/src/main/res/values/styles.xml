<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000000</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/ic_launcher_background</item>
        <item name="stIconEnd">@drawable/ic_launcher_background</item>
        <item name="stLength">LONG</item>
        <!--<item name="stGravity">center</item>-->  or "top"
        <item name="stRadius">5dp</item>
    </style>




    <style name="DemoButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#646f7c</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AllStyles">
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">#00FFFF</item>
        <item name="stColorBackground">#000</item>
        <item name="stRadius">12dp</item>
        <item name="stTextSize">18sp</item>
        <item name="stTextColor">#ff0</item>
        <item name="stTextBold">true</item>
        <item name="stSolidBackground">true</item>
        <item name="stLength">SHORT</item>
    </style>


    <style name="BaseStyleableToast">
        <item name="stLength">SHORT</item>
    </style>

    <style name="ColoredStroke" parent="BaseStyleableToast">
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">#ff00</item>
    </style>

    <style name="ColoredBackground" parent="BaseStyleableToast">
        <item name="stColorBackground">#FF5A5F</item>
    </style>

    <style name="ColoredText" parent="BaseStyleableToast">
        <item name="stTextColor">#FF5A5F</item>
    </style>

    <style name="ColoredBoldText" parent="BaseStyleableToast">
        <item name="stTextColor">#FF5A5F</item>
        <item name="stTextBold">true</item>
    </style>

</resources>
